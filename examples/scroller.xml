<rapicorn-gadgets xmlns:arg="http://rapicorn.org/xmlns" xmlns:def="http://rapicorn.org/xmlns" xmlns:prop="http://rapicorn.org/xmlns">

  <!-- ScrollArea -->
  <def:ScrollPort inherit="Rapicorn::Factory::ScrollPort">
  </def:ScrollPort>
  <def:ScrollArea inherit="Rapicorn::Factory::ScrollArea" child-container="scroll-container">
    <Table>
      <Alignment hexpand="0" vexpand="0" bottom-attach="1" left-attach="0" right-attach="1" top-attach="2" width="0" height="0"
	left-padding="2" right-padding="3" bottom-padding="2" top-padding="2">
	<Frame frame-type="in">
	  <ScrollPort>
	    <Ambience id="scroll-container" normal-lighting="upper-left"/>
	  </ScrollPort>
	</Frame>
      </Alignment>
      <HSlider hexpand="1" adjustment-source="ancestor-horizontal" bottom-attach="0" />
      <VSlider vexpand="1" adjustment-source="ancestor-vertical"   bottom-attach="1" left-attach="1" height="200" />
    </Table>
  </def:ScrollArea>

  <!-- main dialog -->
  <def:main-shell inherit="Root" child-container="scroll-box">
    <arg:test-value1 default="2"/>
    <arg:test-value2/>
    <Ambience normal-lighting="upper-left">
      <VBox>
	<ScrollArea hspread="1" vspread="1">
	  <VBox id="scroll-box" spacing="5" />
	</ScrollArea>
      </VBox>
    </Ambience>
  </def:main-shell>
  <!-- Button definition -->
  <def:test-button inherit="Button" on-click="dummy">
    <arg:test-button-text default="ClickMe" />
    <Label>
      <prop:markup-text>
	<font family='Serif'><larger><larger><larger><larger>[ $test_button_text ]</larger></larger></larger></larger></font>
      </prop:markup-text>
    </Label>
  </def:test-button>
  <!-- Button row -->
  <def:button-row inherit="HBox" spacing="5" >
  </def:button-row>

</rapicorn-gadgets>
