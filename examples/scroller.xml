<rapicorn-definitions xmlns:tmpl="http://rapicorn.org/xmlns:tmpl">

  <!-- main dialog -->
  <tmpl:define id="main-shell" inherit="Window" child-container="scroll-box" width="800" height="600" >
    <tmpl:argument id="test-value1" default="2"/>
    <tmpl:argument id="test-value2"/>
    <Ambience normal-lighting="upper-left">
      <VBox>
	<ScrollArea hspread="1" vspread="1">
	  <VBox id="scroll-box" spacing="5" />
	</ScrollArea>
      </VBox>
    </Ambience>
  </tmpl:define>

  <!-- Button definition -->
  <tmpl:define id="test-button" inherit="Button" on-click="dummy">
    <tmpl:argument id="test-button-text" default="ClickMe" />
    <Label>
      <tmpl:property id="markup-text">
	<font family='Serif'><larger><larger><larger><larger>[ `test_button_text` ]</larger></larger></larger></larger></font>
      </tmpl:property>
    </Label>
  </tmpl:define>

  <!-- Button row -->
  <tmpl:define id="button-row" inherit="HBox" spacing="5" >
  </tmpl:define>

</rapicorn-definitions>
