<rapicorn-definitions xmlns:tmpl="http://rapicorn.org/xmlns:tmpl">

  <!-- button test -->
  <tmpl:define id="button-test" inherit="Frame" frame-type="none">
    <VBox spacing="5">
      <Label markup-text="Test Buttons:"/>
      <Button on-click="Item::print('click on Multiline Button')">
	<Label>
	  <tmpl:property id="markup-text">
	    Multiline<br/>
	    Button<br/>
	    using &lt;br/&gt;
	  </tmpl:property>
	</Label>
      </Button>
      <HBox hexpand="1" spacing="3">
	<Button on-click="Item::print('Normal Button')">
	  <Label vexpand="0" markup-text="Normal Button" />
	</Button>
	<DefaultButton on-click="Item::print('Default Button')">
	  <Label markup-text="Default Button" />
	</DefaultButton>
	<Button hspread="1" on-click="Item::print('HSpread-Button')">
	  <Label markup-text="HSpread Button" />
	</Button>
	<Button on-click="test_handler1" >
	  <Label markup-text="Button for test_handler1"/>
	</Button>
      </HBox>
    </VBox>
  </tmpl:define>

  <!-- Arrangement test -->
  <tmpl:define id="arrangement-test" inherit="Frame" frame-type="etched-out">
    <tmpl:argument id="label-variable" default="Middle Label (sinfex test)"/>
    <Arrangement origin="0 0" >
      <Label markup-text="First?"  hanchor="1" position="-70 30"/>
      <Label markup-text="`label_variable`" />
      <Label markup-text="Third Label" hanchor="0" position="75 30" />
    </Arrangement>
  </tmpl:define>

  <!-- Slider Test -->
  <tmpl:define id="slider-test" inherit="Frame" frame-type="none">
    <HBox spacing="5">
      <VSlider vexpand="1"/>
      <VBox hexpand="1" spacing="5">
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
      </VBox>
      <VSlider vexpand="1"/>
    </HBox>
  </tmpl:define>

  <!-- test dialog -->
  <tmpl:define id="tour-dialog" inherit="Window">
    <Ambience normal-lighting="upper-left"> <!-- normal-background="beige" -->
      <Alignment right-padding="5" top-padding="5" left-padding="5" bottom-padding="5">
	<VBox spacing="3" hexpand="1">
	  <VBox hexpand="1">
	    <button-test hexpand="1" />
	  </VBox>
	  <VBox>
	    <Label markup-text="Slider Test:" />
	    <slider-test hexpand="1"/>
	  </VBox>
	  <VBox>
	    <Label markup-text="Arrangement Test:"/>
	    <arrangement-test/>
	  </VBox>
	  <Alignment left-padding="5" right-padding="5" top-padding="3" bottom-padding="3" hscale="1">
	    <HBox spacing="5" homogeneous="0" >
	      <Button hexpand="1" on-click='Item::print ("ok")' > <Label markup-text="Ok"/> </Button>
	      <Button hexpand="1" on-click="testdump" > <Label markup-text="Test Dump"/> </Button>
	      <Button hexpand="1" on-click="Window::close()" > <Label markup-text="Close"/> </Button>
	    </HBox>
	  </Alignment>
	</VBox>
      </Alignment>
    </Ambience>
  </tmpl:define>
  
</rapicorn-definitions>
