<rapicorn-definitions xmlns:arg="http://rapicorn.org/xmlns" xmlns:def="http://rapicorn.org/xmlns" xmlns:prop="http://rapicorn.org/xmlns">

  <!-- button test -->
  <def:button-test inherit="Frame" frame-type="none">
    <VBox>
      <Label markup-text="Test Buttons:"/>
      <HBox hexpand="1">
	<Button vexpand="1">
	  <Label markup-text="VExpand Button" />
	</Button>
	<Button hexpand="1" on-click="test_handler1" >
	  <Label markup-text="HExpand Button with test handler"/>
	</Button>
	<Button>
	  <Label>
	    <prop:markup-text>
	      Multiline<br/>
	      Button<br/>
	      using &lt;br/&gt;
	    </prop:markup-text>
	  </Label>
	</Button>
      </HBox>
    </VBox>
  </def:button-test>

  <!-- Arrangement test -->
  <def:arrangement-test inherit="Frame" frame-type="etched-out">
    <Arrangement origin="0 0" >
      <Label markup-text="First?"  hanchor="1" position="-70 30"/>
      <Label markup-text="Middle Label" />
      <Label markup-text="Third Label" hanchor="0" position="75 30" />
    </Arrangement>
  </def:arrangement-test>

  <!-- Slider Test -->
  <def:slider-test inherit="Frame" frame-type="none">
    <HBox spacing="5">
      <VSlider vexpand="1"/>
      <VBox hexpand="1" spacing="5">
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
      </VBox>
      <VSlider vexpand="1"/>
    </HBox>
  </def:slider-test>

  <!-- test dialog -->
  <def:tour-dialog inherit="Root">
    <Ambience normal-lighting="upper-left"> <!-- normal-background="beige" -->
      <Alignment right-padding="5" top-padding="5" left-padding="5" bottom-padding="5">
	<Table sensitive="1" column-spacing="5" row-spacing="5" hexpand="1">
	  <VBox bottom-attach="9" right-attach="3" hexpand="1">
	    <button-test hexpand="1" />
	  </VBox>
	  <VBox bottom-attach="8" >
	    <Label markup-text="Slider Test:" />
	    <slider-test hexpand="1"/>
	  </VBox>
	  <VBox bottom-attach="8" left-attach="2" >
	    <Label markup-text="Arrangement Test:"/>
	    <arrangement-test/>
	  </VBox>
	  <Alignment visible="1" left-padding="5" right-padding="5" top-padding="5" bottom-padding="5">
	    <Frame frame-type="etched-in">
	      <Alignment left-padding="5" right-padding="5" top-padding="5" bottom-padding="5"> <!-- width="125" height="110" -->
		<Table>
		  <Label markup-text="*** Title ***" bottom-attach="100" hexpand="1" /> <!-- FIXME: align="center" -->
		  <DefaultButton sensitive="1" bottom-attach="51" vspread="1" vshrink="1" hexpand="0" hfill="0" vfill="0" >
		    <VBox>
		      <Label markup-text="left" right-padding="10" />
		      <Label id="vslabel" markup-text="VSpread" />
		      <Label markup-text="right" left-padding="10" />
		    </VBox>
		  </DefaultButton>
		  <Button bottom-attach="52" >
		    <Label markup-text="Normal Button" />
		  </Button>
		  <Frame frame-type="etched-out" visible="1" left-padding="10" right-padding="10" bottom-padding="10">
		    <Table>
		      <Frame left-attach="3" bottom-attach="59" >
		      </Frame>
		      <Frame left-attach="54" bottom-attach="55" left-padding="20" right-padding="3" frame-type="out" />
		      <Frame left-attach="57" bottom-attach="52" bottom-padding="2" top-padding="13" frame-type="out" />
		      <Frame left-attach="59" bottom-attach="50" hspread="1" vexpand="1" >
			<Label id="hspread-label" markup-text="HSpread" />
		      </Frame>
		      <Frame frame-type="etched-in">
			<Label markup-text="Insensitive Test Text" sensitive="0" />
		      </Frame>
		    </Table>
		  </Frame>
		</Table>
	      </Alignment>
	    </Frame>
	  </Alignment>
	  <Alignment left-padding="5" right-padding="5" top-padding="3" bottom-padding="3" hscale="1">
	    <HBox spacing="5" homogeneous="0" >
	      <Button hexpand="1" on-click='Item::print ("ok")' > <Label markup-text="Ok"/> </Button>
	      <Button hexpand="1" on-click="Window::close()" > <Label markup-text="Cancel"/> </Button>
	    </HBox>
	  </Alignment>
	</Table>
      </Alignment>
    </Ambience>
  </def:tour-dialog>
  
</rapicorn-definitions>
