<rapicorn-gadgets xmlns:arg="http://rapicorn.org/xmlns" xmlns:def="http://rapicorn.org/xmlns" xmlns:prop="http://rapicorn.org/xmlns">

  <!-- button test -->
  <def:button-test inherit="Frame" frame-type="none">
    <VBox>
      <Label markup-text="Test Buttons:"/>
      <HBox hexpand="1">
	<Button vexpand="1">
	  <Label markup-text="VExpand Button" />
	</Button>
	<Button hexpand="1" on-click="test-handler1" >
	  <Label markup-text="HExpand Button with test handler"/>
	</Button>
	<Button>
	  <Label>
	    <prop:markup-text>
	      Multiline<br/>
	      Button<br/>
	      using &lt;br/&gt;
	    </prop:markup-text>
	  </Label>
	</Button>
      </HBox>
    </VBox>
  </def:button-test>

  <!-- Arrangement test -->
  <def:arrangement-test inherit="Frame" frame-type="etched-out">
    <Arrangement origin="0 0" >
      <Label markup-text="First?"  hanchor="1" position="-70 30"/>
      <Label markup-text="Middle Label" />
      <Label markup-text="Third Label" hanchor="0" position="75 30" />
    </Arrangement>
  </def:arrangement-test>

  <!-- Slider Test -->
  <def:slider-test inherit="Frame" frame-type="none">
    <HBox spacing="5">
      <VSlider vexpand="1"/>
      <VBox hexpand="1" spacing="5">
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
	<HSlider hexpand="1"/>
      </VBox>
      <VSlider vexpand="1"/>
    </HBox>
  </def:slider-test>

  <!-- Image tests -->
  <def:image-test inherit="Frame" >
    <VBox>
      <HBox>
	<Label markup-text="Inlined images, RAW/RLE: " />
	<Image builtin_pixstream="testimage-rgb-raw" />
	<Image builtin_pixstream="testimage-rgb-rle" />
      </HBox>
      <HBox> <Label markup-text="Broken icon: " /> <Image builtin-pixstream="!!! rapicorn-trigger-broken-image (non-pixstream-name-32hd_~^) !!!" /></HBox>
      <HBox>
	<Label markup-text="Inlined images with Alpha: " />
	<Image builtin_pixstream="testimage-alpha-raw" />
	<Image builtin_pixstream="testimage-alpha-rle" />
      </HBox>
      <HBox>
	<Label markup-text="Load PNG image file: " />
	<Image image-file="testpic.png" />
      </HBox>
      <HBox>
	<Label markup-text="Load image file with corrupt DATA: " />
	<Image image-file="testpic-DATA.png" />
      </HBox>
      <HBox>
	<Label markup-text="Load image file with corrupt IHDR: " />
	<Image image-file="testpic-IHDR.png" />
      </HBox>
      <HBox>
	<Label markup-text="Load image file with corrupt IDAT: " />
	<Image image-file="testpic-IDAT.png" />
      </HBox>
      <HBox>
	<Label markup-text="Load JPG image file: " />
	<Image image-file="testpic.jpg" />
	<Label markup-text="(not supported)" />
      </HBox>
      <HBox>
	<Label markup-text="Load invalid filename: " />
	<Image image-file="///////////" />
      </HBox>
    </VBox>
  </def:image-test>

  <!-- Frames -->
  <def:frame-test inherit="HBox" spacing="10">
    <Frame frame-type="in"><Frame frame-type="in"><Frame frame-type="in"><Frame frame-type="in">
	    <Frame frame-type="in"><Frame frame-type="in"><Frame frame-type="in"><Frame frame-type="in">
		    <Frame frame-type="in"><Frame frame-type="in"><Frame frame-type="in"><Frame frame-type="in">
			    <Frame frame-type="in"><Frame frame-type="in"><Frame frame-type="in"><Frame frame-type="in">
				    <Label markup-text="IN"/>
				  </Frame></Frame></Frame></Frame>
			  </Frame></Frame></Frame></Frame>
		  </Frame></Frame></Frame></Frame>
	  </Frame></Frame></Frame></Frame>
    <Frame frame-type="etched-in"><Frame frame-type="etched-in"><Frame frame-type="etched-in"><Frame frame-type="etched-in">
	    <Frame frame-type="etched-in"><Frame frame-type="etched-in"><Frame frame-type="etched-in"><Frame frame-type="etched-in">
		    <Frame frame-type="etched-in"><Frame frame-type="etched-in"><Frame frame-type="etched-in"><Frame frame-type="etched-in">
			    <Frame frame-type="etched-in"><Frame frame-type="etched-in"><Frame frame-type="etched-in"><Frame frame-type="etched-in">
				    <Label markup-text="ETCHED-IN"/>
				  </Frame></Frame></Frame></Frame>
			  </Frame></Frame></Frame></Frame>
		  </Frame></Frame></Frame></Frame>
	  </Frame></Frame></Frame></Frame>
    <Frame frame-type="focus"><Frame frame-type="focus"><Frame frame-type="focus"><Frame frame-type="focus">
	    <Frame frame-type="focus"><Frame frame-type="focus"><Frame frame-type="focus"><Frame frame-type="focus">
		    <Frame frame-type="focus"><Frame frame-type="focus"><Frame frame-type="focus"><Frame frame-type="focus">
			    <Frame frame-type="focus"><Frame frame-type="focus"><Frame frame-type="focus"><Frame frame-type="focus">
				    <Label markup-text="FOCUS"/>
				  </Frame></Frame></Frame></Frame>
			  </Frame></Frame></Frame></Frame>
		  </Frame></Frame></Frame></Frame>
	  </Frame></Frame></Frame></Frame>
    <Frame frame-type="none"><Frame frame-type="none"><Frame frame-type="none"><Frame frame-type="none">
	    <Frame frame-type="none"><Frame frame-type="none"><Frame frame-type="none"><Frame frame-type="none">
		    <Frame frame-type="none"><Frame frame-type="none"><Frame frame-type="none"><Frame frame-type="none">
			    <Frame frame-type="none"><Frame frame-type="none"><Frame frame-type="none"><Frame frame-type="none">
				    <Label markup-text="NONE"/>
				  </Frame></Frame></Frame></Frame>
			  </Frame></Frame></Frame></Frame>
		  </Frame></Frame></Frame></Frame>
	  </Frame></Frame></Frame></Frame>
    <Frame frame-type="etched-out"><Frame frame-type="etched-out"><Frame frame-type="etched-out"><Frame frame-type="etched-out">
	    <Frame frame-type="etched-out"><Frame frame-type="etched-out"><Frame frame-type="etched-out"><Frame frame-type="etched-out">
		    <Frame frame-type="etched-out"><Frame frame-type="etched-out"><Frame frame-type="etched-out"><Frame frame-type="etched-out">
			    <Frame frame-type="etched-out"><Frame frame-type="etched-out"><Frame frame-type="etched-out"><Frame frame-type="etched-out">
				    <Label markup-text="ETCHED-OUT"/>
				  </Frame></Frame></Frame></Frame>
			  </Frame></Frame></Frame></Frame>
		  </Frame></Frame></Frame></Frame>
	  </Frame></Frame></Frame></Frame>
    <Frame frame-type="out"><Frame frame-type="out"><Frame frame-type="out"><Frame frame-type="out">
	    <Frame frame-type="out"><Frame frame-type="out"><Frame frame-type="out"><Frame frame-type="out">
		    <Frame frame-type="out"><Frame frame-type="out"><Frame frame-type="out"><Frame frame-type="out">
			    <Frame frame-type="out"><Frame frame-type="out"><Frame frame-type="out"><Frame frame-type="out">
				    <Label markup-text="OUT"/>
				  </Frame></Frame></Frame></Frame>
			  </Frame></Frame></Frame></Frame>
		  </Frame></Frame></Frame></Frame>
	  </Frame></Frame></Frame></Frame>
  </def:frame-test>

  <!-- test dialog -->
  <def:tour-dialog inherit="Ambience" normal-lighting="upper-left"> <!-- normal-background="beige" -->
    <Alignment right-padding="5" top-padding="5" left-padding="5" bottom-padding="5">
      <Table sensitive="1" column-spacing="5" row-spacing="5" hexpand="1">
	<VBox bottom-attach="9" right-attach="3" hexpand="1">
	  <button-test hexpand="1" />
	</VBox>
	<VBox bottom-attach="8" >
	  <Label markup-text="Slider Test:" />
	  <slider-test hexpand="1"/>
	</VBox>
	<VBox bottom-attach="8" left-attach="2" hexpand="1">
	  <Label markup-text="Drawable Test:" />
	  <Frame>
	    <Drawable id="drawable1" />
	  </Frame>
	</VBox>
	<VBox bottom-attach="7" >
	  <Label markup-text="Image Tests:" />
	  <image-test/>
	</VBox>
	<VBox bottom-attach="7" left-attach="2" >
	  <Label markup-text="Arrangement Test:"/>
	  <arrangement-test/>
	</VBox>
	<VBox bottom-attach="6" right-attach="3">
	  <Label markup-text="Funny Frames:"/>
	  <frame-test/>
	</VBox>
	<Alignment visible="1" left-padding="5" right-padding="5" top-padding="5" bottom-padding="5">
	  <Frame frame-type="etched-in">
	    <Alignment left-padding="5" right-padding="5" top-padding="5" bottom-padding="5"> <!-- width="125" height="110" -->
	      <Table>
		<Label markup-text="*** Title ***" bottom-attach="100" hexpand="1" /> <!-- FIXME: align="center" -->
		<DefaultButton sensitive="1" bottom-attach="51" vspread="1" vshrink="1" hexpand="0" hfill="0" vfill="0" >
		  <VBox>
		    <Label markup-text="left" right-padding="10" />
		    <Label id="vslabel" markup-text="VSpread" />
		    <Label markup-text="right" left-padding="10" />
		  </VBox>
		</DefaultButton>
		<Button bottom-attach="52" >
		  <Label markup-text="Normal Button" />
		</Button>
		<Frame frame-type="etched-out" visible="1" left-padding="10" right-padding="10" bottom-padding="10">
		  <Table>
		    <Frame left-attach="3" bottom-attach="59" >
		    </Frame>
		    <Frame left-attach="54" bottom-attach="55" left-padding="20" right-padding="3" frame-type="out" />
		    <Frame left-attach="57" bottom-attach="52" bottom-padding="2" top-padding="13" frame-type="out" />
		    <Frame left-attach="59" bottom-attach="50" hspread="1" vexpand="1" >
		      <Label id="hspread-label" markup-text="HSpread" />
		    </Frame>
		    <Frame frame-type="etched-in">
		      <Label markup-text="Insensitive Test Text" sensitive="0" />
		    </Frame>
		  </Table>
		</Frame>
	      </Table>
	    </Alignment>
	  </Frame>
	</Alignment>
	<Alignment left-padding="5" right-padding="5" top-padding="3" bottom-padding="3" hscale="1">
	  <HBox spacing="5" homogeneous="0" >
	    <Button hexpand="1" > <Label markup-text="Ok"/> </Button>
	    <Button hexpand="1" > <Label markup-text="Cancel"/> </Button>
	  </HBox>
	</Alignment>
      </Table>
    </Alignment>
  </def:tour-dialog>
  
</rapicorn-gadgets>
