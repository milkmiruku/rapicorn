<rapicorn-definitions xmlns:tmpl="http://rapicorn.org/xmlns:tmpl">

  <!-- main window -->
  <Window id="main-window" title="Rapicorn Hello World Example">
    <OuterShell>
      <Label>
	<tmpl:property id="markup-text">
	  <larger>Hello World!</larger>
	</tmpl:property>
      </Label>
      <Button on-click="close"  >
	<Label markup-text="Close"/>
      </Button>
    </OuterShell>
  </Window>

</rapicorn-definitions>
