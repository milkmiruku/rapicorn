<rapicorn-gadgets xmlns:arg="http://rapicorn.org/xmlns" xmlns:def="http://rapicorn.org/xmlns" xmlns:prop="http://rapicorn.org/xmlns">

  <!-- main window -->
  <def:main-window inherit="Root">
    <OuterShell>
      <Label>
	<prop:markup-text>
	  <larger>Hello World!</larger>
	</prop:markup-text>
      </Label>
      <Button on-click="close"  >
	<Label markup-text="Close"/>
      </Button>
    </OuterShell>
  </def:main-window>

</rapicorn-gadgets>
