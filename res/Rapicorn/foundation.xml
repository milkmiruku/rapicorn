<rapicorn-definitions>

  <!-- Factory Types -->
  <Rapicorn_Factory id="Alignment" factory-type="Rapicorn_Factory:Alignment"/>
  <Rapicorn_Factory id="Ambience" factory-type="Rapicorn_Factory:Ambience"/>
  <Rapicorn_Factory id="Arrangement" factory-type="Rapicorn_Factory:Arrangement"/>
  <Rapicorn_Factory id="Arrow" factory-type="Rapicorn_Factory:Arrow"/>
  <Rapicorn_Factory id="ButtonArea" factory-type="Rapicorn_Factory:ButtonArea"/>
  <Rapicorn_Factory id="DotGrid" factory-type="Rapicorn_Factory:DotGrid"/>
  <Rapicorn_Factory id="Drawable" factory-type="Rapicorn_Factory:Drawable"/>
  <Rapicorn_Factory id="FillAreaContainer" factory-type="Rapicorn_Factory:FillAreaContainer"/>
  <Rapicorn_Factory id="FocusFrame" factory-type="Rapicorn_Factory:FocusFrame"/>
  <Rapicorn_Factory id="Frame" factory-type="Rapicorn_Factory:Frame"/>
  <Rapicorn_Factory id="HBox" factory-type="Rapicorn_Factory:HBox"/>
  <Rapicorn_Factory id="IdlTestWidget" factory-type="Rapicorn_Factory:IdlTestWidget"/>
  <Rapicorn_Factory id="Image" factory-type="Rapicorn_Factory:Image"/>
  <Rapicorn_Factory id="Label" factory-type="Rapicorn_Factory:Label"/>
  <Rapicorn_Factory id="LayerPainter" factory-type="Rapicorn_Factory:LayerPainter"/>
  <Rapicorn_Factory id="Rapicorn_Factory_TextBlock" factory-type="Rapicorn_Factory:TextPango"/>
  <Rapicorn_Factory id="RapicornScrollArea" factory-type="Rapicorn_Factory:ScrollArea"/>
  <Rapicorn_Factory id="RapicornScrollPort" factory-type="Rapicorn_Factory:ScrollPort"/>
  <Rapicorn_Factory id="Rapicorn-slider-skid" factory-type="Rapicorn_Factory:SliderSkid"/>
  <Rapicorn_Factory id="Rapicorn-slider-trough" factory-type="Rapicorn_Factory:SliderTrough"/>
  <Rapicorn_Factory id="SliderArea" factory-type="Rapicorn_Factory:SliderArea"/>
  <Rapicorn_Factory id="StatePainter" factory-type="Rapicorn_Factory:StatePainter"/>
  <Rapicorn_Factory id="Table" factory-type="Rapicorn_Factory:Table"/>
  <Rapicorn_Factory id="TestBox" factory-type="Rapicorn_Factory:TestBox"/>
  <Rapicorn_Factory id="TestContainer" factory-type="Rapicorn_Factory:TestContainer"/>
  <Rapicorn_Factory id="TextEditor" factory-type="Rapicorn_Factory:TextEditor"/>
  <Rapicorn_Factory id="VBox" factory-type="Rapicorn_Factory:VBox"/>
  <Rapicorn_Factory id="WidgetList" factory-type="Rapicorn_Factory:WidgetList"/>
  <Rapicorn_Factory id="Window" factory-type="Rapicorn_Factory:Window"/>

  <!-- Buttons -->
  <ButtonArea id="Button" child-container="child-area" >
    <Argument id="center-child" default="1" />
    <Frame normal-frame="out" impressed-frame="in" >
      <Ambience
	normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	<FocusFrame frame-type="none">
	  <Alignment id="child-area" vscale="@eval not 1*center_child" hscale="@eval not 1*center_child" left-padding="1" right-padding="1" bottom-padding="1" top-padding="1" />
	</FocusFrame>
      </Ambience>
    </Frame>
  </ButtonArea>
  <ButtonArea id="UnfocusedButton" child-container="child-area" >
    <Argument id="center-child" default="1" />
    <Frame normal-frame="out" impressed-frame="in" >
      <Ambience
	normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	<Alignment id="child-area" vscale="@eval not 1*center_child" hscale="@eval not 1*center_child" left-padding="1" right-padding="1" bottom-padding="1" top-padding="1" />
      </Ambience>
    </Frame>
  </ButtonArea>
  <Frame id="DefaultButton" child-container="child-area" frame-type="in" >
    <Argument id="on-click" />
    <Alignment left-padding="2" right-padding="2" bottom-padding="2" top-padding="2" >
      <Button id="child-area" on-click="@eval on_click"/>
    </Alignment>
  </Frame>

  <!-- HSlider -->
  <SliderArea id="HSlider">
    <Frame normal-frame="in" vexpand="1" hexpand="1" height="18">
      <HBox vexpand="1">
	<UnfocusedButton on-click="decrement" on-click2="page-decrement" click-type="fast-repeat" vexpand="1" center-child="0" >
	  <Arrow arrow-dir="left" size-policy="width-from-height"/>
	</UnfocusedButton>
	<Rapicorn-slider-trough hexpand="1" vexpand="1">
	  <Rapicorn-slider-skid vspread="1" hexpand="1" vertical-skid="0">
	    <Ambience
	      normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	      normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	      <Frame normal-frame="out" vexpand="1">
		<DotGrid n-hdots="6" n-vdots="2" left-padding-dots="2" right-padding-dots="2" top-padding-dots="0" bottom-padding-dots="0" />
	      </Frame>
	    </Ambience>
	  </Rapicorn-slider-skid>
	</Rapicorn-slider-trough>
	<UnfocusedButton on-click="increment" on-click2="page-increment" click-type="fast-repeat" vexpand="1" center-child="0" >
	  <Arrow arrow-dir="right" size-policy="width-from-height"/>
	</UnfocusedButton>
      </HBox>
    </Frame>
  </SliderArea>

  <!-- VSlider -->
  <SliderArea id="VSlider">
    <Frame normal-frame="in" vexpand="1" hexpand="1" width="18">
      <VBox hexpand="1">
	<UnfocusedButton on-click="decrement" on-click2="page-increment" click-type="fast-repeat" hexpand="1" center-child="0" >
	  <Arrow arrow-dir="up" size-policy="height-from-width"/>
	</UnfocusedButton>
	<Rapicorn-slider-trough vexpand="1" hexpand="1">
	  <Rapicorn-slider-skid hspread="1" vexpand="1" vertical-skid="1">
	    <Ambience
	      normal-lighting="upper-left" impressed-lighting="lower-right" prelight-lighting="upper-left" insensitive-lighting="none"
	      normal-shade="none" impressed-shade="none" prelight-shade="diffuse" insensitive-shade="none">
	      <Frame normal-frame="out" hexpand="1">
		<DotGrid n-hdots="2" n-vdots="6" left-padding-dots="0" right-padding-dots="0" top-padding-dots="2" bottom-padding-dots="2" />
	      </Frame>
	    </Ambience>
	  </Rapicorn-slider-skid>
	</Rapicorn-slider-trough>
	<UnfocusedButton on-click="increment" on-click2="page-decrement" click-type="fast-repeat" hexpand="1" center-child="0" >
	  <Arrow arrow-dir="down" size-policy="height-from-width"/>
	</UnfocusedButton>
      </VBox>
    </Frame>
  </SliderArea>

  <!-- ScrollArea -->
  <Alignment id="ScrollArea" child-container="scroll-container">
    <RapicornScrollArea>
      <Table>
	<Alignment hexpand="1" vexpand="1" hposition="0" hspan="1" vposition="0" vspan="1" width="0" height="0"
	  left-padding="2" right-padding="3" bottom-padding="2" top-padding="2">
	  <Frame frame-type="in" hscale="0" vscale="0">
	    <RapicornScrollPort id="scroll-container">
	      <!-- <Ambience id="scroll-container" normal-lighting="upper-left"/> -->
	    </RapicornScrollPort>
	  </Frame>
	</Alignment>
	<VSlider vexpand="0" adjustment-source="ancestry-vertical"   vposition="0" hposition="1" />
	<HSlider hexpand="0" adjustment-source="ancestry-horizontal" vposition="1" />
      </Table>
    </RapicornScrollArea>
  </Alignment>

  <!-- TestWidget -->
  <TestContainer id="TestWidget" paint-allocation="1" width="10" height="10"/>

</rapicorn-definitions>
