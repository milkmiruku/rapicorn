<rapicorn-definitions xmlns:arg="http://rapicorn.org/xmlns" xmlns:def="http://rapicorn.org/xmlns" xmlns:prop="http://rapicorn.org/xmlns">

  <!-- property test -->
  <def:property-test inherit="TestItem" assert_value="foobar">
    <prop:value>foobar</prop:value>
  </def:property-test>

  <!-- test dialog -->
  <def:test-dialog inherit="Window">
    <arg:zonk default="zonking"/>
    <Alignment padding="10">
      <VBox>
	<Label plain-text="Checking &lt;prop:value>xxx&lt;/> syntax:" />
	<TestItem assert_value="frobnicate">
	  <prop:value>frobnicate</prop:value>
	</TestItem>
	<Label plain-text="Checking &lt;prop:value>xxx&lt;/> in definitions:" />
	<property-test />
	<Label plain-text="Checking &lt;arg:value default='...'/> syntax:" />
	<TestItem assert_value="zonking" value="`zonk`" />
	<Label plain-text="Checking &lt;prop:value>xxx&lt;/> evaluation:" />
	<TestItem assert_value="zonking">
	  <prop:value>`zonk`</prop:value>
	</TestItem>
	<Label plain-text="Checking backtick in attributes:" />
	<TestItem assert_value="``"><prop:value prop:evaluate="false">&#x60;</prop:value></TestItem>
      </VBox>
    </Alignment>
  </def:test-dialog>

</rapicorn-definitions>
