<rapicorn-definitions xmlns:tmpl="http://rapicorn.org/xmlns:tmpl">

  <!-- property test -->
  <tmpl:define id="property-test" inherit="TestWidget" assert_value="foobar">
    <tmpl:property id="value">foobar</tmpl:property>
  </tmpl:define>

  <!-- test dialog -->
  <tmpl:define id="test-dialog" inherit="Window">
    <tmpl:argument id="zonk" default="zonking"/>
    <Alignment padding="10">
      <VBox>
	<Label plain-text="Checking &lt;prop:value>xxx&lt;/> syntax:" />
	<TestWidget assert_value="frobnicate">
	  <tmpl:property id="value">frobnicate</tmpl:property>
	</TestWidget>
	<Label plain-text="Checking &lt;prop:value>xxx&lt;/> in definitions:" />
	<property-test />
	<Label plain-text="Checking &lt;arg:value default='...'/> syntax:" />
	<TestWidget assert_value="zonking" value="`zonk`" />
	<Label plain-text="Checking &lt;prop:value>xxx&lt;/> evaluation:" />
	<TestWidget assert_value="zonking">
	  <tmpl:property id="value">`zonk`</tmpl:property>
	</TestWidget>
	<Label plain-text="Checking backtick in attributes:" />
	<TestWidget assert_value="``"><tmpl:property id="value" evaluate="false">&#x60;</tmpl:property></TestWidget>
      </VBox>
    </Alignment>
  </tmpl:define>

</rapicorn-definitions>
