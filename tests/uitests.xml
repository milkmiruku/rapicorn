<rapicorn-definitions>

  <!-- property test -->
  <TestWidget id="property-test" assert_value="foobar">
    <TestWidget.value>foobar</TestWidget.value>
  </TestWidget>

  <!-- test dialog -->
  <Window id="test-dialog">
    <Argument id="zonk" default="zonking"/>
    <Alignment padding="10">
      <VBox>
	<Label plain-text="Checking &lt;prop:value>xxx&lt;/> syntax:" />
	<TestWidget assert_value="frobnicate">
	  <TestWidget.value>frobnicate</TestWidget.value>
	</TestWidget>
	<Label plain-text="Checking &lt;prop:value>xxx&lt;/> in definitions:" />
	<property-test />
	<Label plain-text="Checking &lt;arg:value default='...'/> syntax:" />
	<TestWidget assert_value="zonking" value="@eval zonk" />
	<Label plain-text="Checking &lt;prop:value>xxx&lt;/> evaluation:" />
	<TestWidget assert_value="zonking">
	  <TestWidget.value>@eval zonk</TestWidget.value>
	</TestWidget>
	<Label plain-text="Checking backtick in attributes:" />
	<TestWidget assert_value="`"><TestWidget.value evaluate="false">&#x60;</TestWidget.value></TestWidget>
      </VBox>
    </Alignment>
  </Window>

</rapicorn-definitions>
